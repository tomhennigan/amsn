	<plugin_version>0.3.1</plugin_version>
	<plugin_file>actionsmenu.tcl</plugin_file>
	<plugin_namespace>actionsmenu</plugin_namespace>
	<init_procedure>Init</init_procedure>
	<deinit_procedure>DeInit</deinit_procedure>
	<cvs_version>9002</cvs_version>
	<lang>
		<langcode>en</langcode>
		<version>9002</version>
	</lang>
	<lang>
		<langcode>hu</langcode>
		<version>9002</version>
	</lang>
	
